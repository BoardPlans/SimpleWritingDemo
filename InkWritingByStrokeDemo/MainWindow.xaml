        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkWritingByStrokeDemo"
        mc:Ignorable="d"
        Title="书写Demo" Height="900" Width="1480" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="PointsCanvas" Background="White"/>
        <Grid x:Name="InkGrid" Background="#01ffffff"/>
        <Button x:Name="ClearButton" Content="清除" Height="30" Width="60" Click="ClearButton_OnClick" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="12"/>
    </Grid>
</Window>
